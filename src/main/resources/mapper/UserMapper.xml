<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.xhalo.video.dao.UserDao">

    <resultMap type="net.xhalo.video.model.User" id="UserMap">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <result column="enabled" jdbcType="TINYINT" javaType="boolean" property="enabled"/>
        <result column="authority" jdbcType="VARCHAR" property="authority"/>
        <result column="sign" jdbcType="VARCHAR" property="sign"/>
        <result column="head_img" jdbcType="VARCHAR" property="headImg"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime"/>
    </resultMap>

    <insert id="addUser" parameterType="net.xhalo.video.model.User">
		INSERT INTO user_table(
		username,
		password,
		nickname,
		enabled,
		authority,
		sign,
		head_img,
		create_time
		) VALUES (
		#{username},
		#{password},
		#{nickname},
		#{enabled},
		#{authority},
		#{sign},
		#{headImg},
		CURRENT_TIMESTAMP
		)
	</insert>

    <select id="validateUsername" parameterType="net.xhalo.video.model.User"
            resultType="INTEGER">
		SELECT
		COUNT(id)
		FROM
		user_table
		WHERE
		username=#{username}
		AND
		enabled = TRUE
	</select>

    <update id="updateLoginTime" parameterType="net.xhalo.video.model.User">
		UPDATE
		user_table
		SET
		last_login_time = CURRENT_TIMESTAMP
		WHERE
		username = #{username}
	</update>

    <select id="findByUsername" parameterType="String" resultMap="UserMap">
		SELECT
		id,
		username,
		password,
		authority
		FROM
		user_table
		WHERE
		username=#{username}
		AND
		enabled = TRUE
	</select>

    <select id="getUserByUsername" parameterType="net.xhalo.video.model.User" resultMap="UserMap">
		SELECT
		id,
		username,
		password,
		nickname,
		enabled,
		authority,
		sign,
		head_img,
		create_time
		FROM
		user_table
		WHERE
		username=#{username}
	</select>

    <update id="updateUserInfoByIdAndUsername" parameterType="net.xhalo.video.model.User">
        UPDATE
        user_table
        SET
        nickname=#{nickname},
        sign=#{sign}
        WHERE
        1=1
        <if test="username==null">
            AND
            1=2
        </if>
        <if test="id==null">
            AND
            1=2
        </if>
        <if test="username!=null">
            AND
            username = #{username}
        </if>
        <if test="id!=null">
            AND
            id = #{id}
        </if>
    </update>

    <update id="updateUserHeadImgByIdAndUsername" parameterType="net.xhalo.video.model.User">
        UPDATE
        user_table
        SET
        head_img=#{headImg}
        WHERE
        1=1
        <if test="username==null">
            AND
            1=2
        </if>
        <if test="id==null">
            AND
            1=2
        </if>
        <if test="username!=null">
            AND
            username = #{username}
        </if>
        <if test="id!=null">
            AND
            id = #{id}
        </if>
    </update>

    <update id="updateUserPasswordByIdAndUsernameAndPassword">
        UPDATE
        user_table
        SET
        password=#{user.password}
        WHERE
        1=1
        <if test="user.username==null">
            AND
            1=2
        </if>
        <if test="user.id==null">
            AND
            1=2
        </if>
        <if test="user.username!=null">
            AND
            username = #{user.username}
        </if>
        <if test="user.id!=null">
            AND
            id = #{user.id}
        </if>
    </update>

</mapper>
